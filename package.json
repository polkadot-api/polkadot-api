{
  "name": "root-polkadot-api",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "experiments"
  ],
  "type": "module",
  "scripts": {
    "build-core": "pnpm -r build-core",
    "build-external": "pnpm -r build-external",
    "build": "pnpm turbo build-core && pnpm install && pnpm build-external",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test run",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all",
    "jsdocExperimentalFormatCommentsWithoutTags": true,
    "plugins": [
      "@homer0/prettier-plugin-jsdoc"
    ]
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.4",
    "@homer0/prettier-plugin-jsdoc": "^11.0.2",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup": "^4.57.1",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
