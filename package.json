{
  "name": "root-polkadot-api",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "experiments"
  ],
  "type": "module",
  "scripts": {
    "build-core": "pnpm -r build-core",
    "build-external": "pnpm -r build-external",
    "build": "pnpm turbo build-core && pnpm install && pnpm build-external",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test run",
    "test:ci": "pnpm -r test:ci",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all",
    "jsdocExperimentalFormatCommentsWithoutTags": true,
    "plugins": [
      "@homer0/prettier-plugin-jsdoc"
    ]
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.4",
    "@homer0/prettier-plugin-jsdoc": "^11.0.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "tsup": "8.5.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
