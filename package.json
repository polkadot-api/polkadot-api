{
  "name": "root-polkadot-api",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "experiments"
  ],
  "type": "module",
  "scripts": {
    "build-core": "pnpm -r build-core",
    "build-external": "pnpm -r build-external",
    "build": "pnpm turbo build-core && pnpm install && pnpm build-external",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test run",
    "test:ci": "pnpm -r test:ci",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all",
    "jsdocExperimentalFormatCommentsWithoutTags": true,
    "plugins": [
      "@homer0/prettier-plugin-jsdoc"
    ]
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.1.5",
    "@homer0/prettier-plugin-jsdoc": "^9.1.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@vitest/coverage-v8": "^3.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "rollup": "^4.34.8",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.2.0",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "packageManager": "pnpm@9.15.5+sha512.845196026aab1cc3f098a0474b64dfbab2afe7a1b4e91dd86895d8e4aa32a7a6d03049e2d0ad770bbe4de023a7122fb68c1a1d6e0d033c7076085f9d5d4800d4"
}
