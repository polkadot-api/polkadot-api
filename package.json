{
  "name": "root-polkadot-api",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*",
    "experiments"
  ],
  "type": "module",
  "scripts": {
    "build-core": "pnpm -r build-core",
    "build-external": "pnpm -r build-external",
    "build": "pnpm turbo build-core && pnpm install && pnpm build-external",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "test": "pnpm -r test run",
    "test:ci": "pnpm -r test:ci",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "trailingComma": "all",
    "jsdocExperimentalFormatCommentsWithoutTags": true,
    "plugins": [
      "@homer0/prettier-plugin-jsdoc"
    ]
  },
  "devDependencies": {
    "@fast-check/vitest": "^0.2.3",
    "@homer0/prettier-plugin-jsdoc": "^10.0.0",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@vitest/coverage-v8": "^4.0.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "tslib": "^2.8.1",
    "tsup": "8.5.0",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
